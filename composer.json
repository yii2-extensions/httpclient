{
    "name": "yii2-extensions/httpclient",
    "type": "yii2-extension",
    "description": "HTTP client extension for Yii2",
    "keywords": [
        "yii2",
        "http",
        "httpclient",
        "curl"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "yiisoft/yii2": "^2.2"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.6",
        "phpunit/phpunit": "^10.2",
        "proget-hq/phpstan-yii2": "^0.8.0"
    },
    "autoload": {
        "psr-4": { "yii\\httpclient\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "yiiunit\\extensions\\authclient\\": "tests" }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "phpstan": "phpstan",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
